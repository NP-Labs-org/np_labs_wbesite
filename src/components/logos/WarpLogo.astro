---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`flex items-center ${className}`}>
  {/* Logo Symbol */}
  <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path 
      d="M3 5 L10 35 L20 15 L30 35 L37 5 L32 5 L27 28 L20 12 L13 28 L8 5 L3 5Z"
      fill="currentColor"
      stroke="currentColor"
      stroke-width="0.5"
      stroke-linejoin="bevel"
    />
  </svg>

  {/* Logo Text */}
  <span class="ml-4 text-4xl font-bold tracking-tight">
    Warp
  </span>
</div>

<style>
  svg {
    transition: transform 0.3s ease;
  }
  
  svg:hover {
    transform: rotate(45deg);
  }
</style> 