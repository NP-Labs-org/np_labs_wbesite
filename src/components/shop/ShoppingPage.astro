---
import ProductGrid from './ProductGrid.astro';
import ChatInterface from './ChatInterface.astro';

interface Props {
  title?: string;
  storeName?: string;
}

const { 
  title = "Shopping Recommendations", 
  storeName = "Fashion Store" 
} = Astro.props;
---

<div class="shopping-page h-full bg-white overflow-hidden flex flex-col">
  <!-- Simple header -->
  <header class="bg-white shadow-sm py-2 z-10">
    <div class="container mx-auto px-4 flex justify-between items-center">
      <h1 class="text-lg font-bold text-gray-800">{storeName}</h1>
      <nav class="flex space-x-4 text-sm">
        <a href="#" class="text-gray-600 hover:text-gray-900">Shop</a>
        <a href="#" class="text-gray-600 hover:text-gray-900">Categories</a>
      </nav>
      <div class="flex items-center space-x-2">
        <button class="text-gray-700 hover:text-gray-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        <button class="text-gray-700 hover:text-gray-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        </button>
      </div>
    </div>
  </header>

  <!-- Main content -->
  <main class="flex-1 overflow-auto p-4">
    <div class="flex flex-col lg:flex-row gap-4">
      <!-- Product grid section (takes up more space) -->
      <div class="lg:w-3/5">
        <ProductGrid title={title} />
      </div>
      
      <!-- Chat interface section (takes up less space) -->
      <div class="lg:w-2/5">
        <ChatInterface poweredBy="NP Labs AI" />
      </div>
    </div>
  </main>

  
</div>

<style>
  /* Ensure the component fits within the parent container */
  .shopping-page {
    max-height: 600px;
  }
</style> 