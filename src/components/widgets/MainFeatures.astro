---
const features = [
  {
    title: 'MELHORIA NA PRECISÃO',
    value: '150%',
    unit: 'PRECISÃO',
    description: 'Alcançada com HybridRAG, combinando grafos de conhecimento e recuperação vetorial para respostas precisas e contextualizadas.',
    gridArea: '1 / 1 / 2 / 2'
  },
  {
    title: 'IA que funciona, independente do dado',
    subtitle: 'Resultados que Fazem a Diferença',
    description: 'Destacando conquistas e marcos impulsionados pela tecnologia R2R.',
    value: '',
    unit: '',
    gridArea: '1 / 2 / 2 / 3'
  },
  {
    title: 'REDUÇÃO NO TEMPO DE CONFIGURAÇÃO',
    value: '75',
    unit: 'HORAS',
    description: 'Em comparação com frameworks RAG tradicionais, graças a configurações otimizadas e auto-escalonamento.',
    gridArea: '1 / 3 / 2 / 4'
  },
  {
    title: 'TAXA DE RETENÇÃO DE CLIENTES',
    value: '87%',
    unit: 'RETENÇÃO',
    description: 'Confiada por empresas, demonstrando satisfação e valor em parcerias de longo prazo.',
    gridArea: '2 / 1 / 3 / 2'
  },
  null, // blank cell
  {
    title: 'REDUÇÃO DE CUSTOS',
    value: '2X',
    unit: 'ECONOMIA',
    description: 'Infraestrutura otimizada reduzindo despesas operacionais para clientes.',
    gridArea: '2 / 3 / 3 / 4'
  }
];
---

<section class="py-16 md:py-20 bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex mb-20">
      <div class="text-gray-500">[</div>
      <div class="text-sm font-semibold tracking-wider ml-5 mr-16 pt-1 text-gray-500">NOSSOS RESULTADOS</div>
    </div>
    
    <div class="text-3xl font-bold mb-12 max-w-3xl uppercase text-white">
      RESULTADOS QUE FAZEM A DIFERENÇA
    </div>
    
    <div class="text-gray-400 max-w-3xl mb-16">
      Destacando conquistas e marcos impulsionados pela tecnologia WARP.
    </div>

    <div class="grid grid-cols-3 gap-0 relative">
      {features.map(feature => feature && (
        <div 
          class="border border-gray-800 p-8 min-h-[280px] flex flex-col justify-between relative -ml-[1px] -mt-[1px] hover:z-10 transition-all duration-300 hover:border-gray-600"
          style={`grid-area: ${feature.gridArea}`}
        >
          <div class="text-sm text-gray-400 max-w-[80%]">
            {feature.title}
          </div>
          {feature.value && (
            <div class="flex items-end gap-4">
              <div class="text-4xl md:text-6xl font-bold">
                {feature.value}
              </div>
              <div class="text-sm text-gray-400 mb-3">
                {feature.unit}
              </div>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section> 