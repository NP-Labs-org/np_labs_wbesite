---
interface Props {
  title: string;
  description: string;
  image?: {
    src: string;
    alt: string;
  };
  isActive?: boolean;
}

const { title, description, image, isActive = false } = Astro.props;
---

<div class={`feature-card relative border border-white/20 transition-all duration-300 ${isActive ? 'z-10' : 'hover:z-10'}`}>
  <div class="grid grid-cols-12 gap-4">
    <!-- Title on the left -->
    <div class="col-span-3 p-6">
      <h3 class="process-font text-white text-xl tracking-wider">{title}</h3>
    </div>

    <!-- Image in the middle -->
    <div class="col-span-6 relative">
      {image && (
        <img 
          src={image.src} 
          alt={image.alt}
          class="w-full h-full object-cover"
        />
      )}
    </div>

    <!-- Description on the right -->
    <div class="col-span-3 p-6">
      <p class="process-font text-gray-400 text-sm leading-relaxed">
        {description}
      </p>
    </div>
  </div>

  <!-- Clickable overlay -->
  <button class="absolute inset-0 w-full h-full cursor-pointer opacity-0">
    <span class="sr-only">View details</span>
  </button>
</div>

<style>
  .feature-card {
    background-color: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
  }

  .feature-card:hover {
    transform: scale(1.01);
  }
</style> 