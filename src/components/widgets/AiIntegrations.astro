---
const aiPartners = [
  {
    name: 'Open AI',
    logo: 'https://upload.wikimedia.org/wikipedia/commons/4/4d/OpenAI_Logo.svg',
    height: 30
  },
  {
    name: 'Vertex AI',
    logo: 'https://cdn.prod.website-files.com/67598e3b5398bca2b6ec80d7/67a1f25cb010e0ebe990da27_VertexAI.svg',
    height: 30
  },
  {
    name: 'Anthropic',
    logo: 'https://cdn.prod.website-files.com/67598e3b5398bca2b6ec80d7/67a1f263c6d739e86f9ef391_Anthropic.svg',
    height: 30
  },
  {
    name: 'AWS Bedrock',
    logo: 'https://cdn.prod.website-files.com/67598e3b5398bca2b6ec80d7/67a1f26af6eb56ae25b5eb4f_AWS.svg',
    height: 35
  }
];
---

<section class="py-16 md:py-20 bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex items-center mb-12">
      <div class="text-gray-500">[</div>
      <div class="text-sm font-semibold tracking-wider ml-5 mr-16 text-gray-500">MODELOS DE IA</div>
    </div>
    
    <div class="text-3xl font-bold mb-12 max-w-3xl uppercase text-white">
      INTEGRADO COM
    </div>
    
    <div class="flex flex-wrap justify-between items-center gap-x-16 gap-y-10 md:gap-x-20">
      {aiPartners.map((partner) => (
        <div class="flex items-center group">
          <img 
            src={partner.logo} 
            alt={`${partner.name} logo`} 
            height={partner.height}
            class="w-auto opacity-60 group-hover:opacity-100 transition-all duration-300 transform group-hover:scale-110 filter brightness-0 invert"
            style={`height: ${partner.height}px;`}
          />
        </div>
      ))}
    </div>
  </div>
</section> 