import { getPermalink } from '~/utils/permalinks';
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 mt-8 mb-8">
  <a 
    href={getPermalink('/blog')}
    class="inline-flex items-center justify-center px-4 py-2 text-sm uppercase tracking-wider text-gray-400 border border-white/10 bg-black/30 hover:border-white/30 hover:text-white transition-all duration-300"
  >
    <svg class="w-3 h-3 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
    </svg>
    Back to Blog
  </a>
