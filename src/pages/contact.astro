---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contato" title="Vamos Conectar!" />

  <ContactUs
    id="form"
    title="Mande uma mensagem hoje!"
    subtitle="Para respostas rápidas, explore nosso FAC. Você pode achar o que está buscando lá mesmo! Se não, Nosso time de suporte ficará feliz em atendê-lo."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    description="Nosso time de suporte tipicamente responde dentro de 24 horas."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos aqui para ajudar!"
    items={[
      {
        title: 'Telefone',
        description: '+51 (21) 97267-5855',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'farrulla@np-labs.org',
        icon: 'tabler:mail',
      },
      {
        title: 'Localização',
        description: 'Rio de Janeiro, Brasil',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
