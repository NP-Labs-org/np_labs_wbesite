---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Workplace Search - NP Labs',
};

const securityFeatures = [
  {
    title: 'Frictionless, automated PII redaction',
    description: 'Credal will automatically mask PII and sensitive terms from LLMs like OpenAI.',
    icon: 'tabler:shield-lock',
  },
  {
    title: 'Automated AI Policy Enforcement',
    description: 'Upload your AI policy to Credal and let Credal automatically warn users (and alert IT) or block requests if they violate the policy',
    icon: 'tabler:gavel',
  },
  {
    title: 'Audit Logged',
    description: 'Credal automatically audit logs every user request, with data lineage',
    icon: 'tabler:report-analytics',
  },
];
---

<Layout metadata={metadata}>
  <div class="relative">
    <!-- Hero Section -->
    <section class="relative pt-16 pb-12">
      <div class="max-w-3xl mx-auto px-4 sm:px-6">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-6 font-heading">
            Workplace Search
          </h1>
          <p class="text-xl mb-8">
            Give your teams access to collective information, break down silos, and keep critical expertise within your organization.
          </p>
          <p class="text-lg mb-12">
            Credal's Workplace Search breaks down internal communication barriers, enabling teams to quickly find answers and transfer institutional knowledge. Our platform provides an AI-powered, searchable repository of documentation, best practices, and team-specific insights while maintaining security and compliance. Whether it's a new hire getting up to speed or a sales team resolving a technical query, Workplace Search empowers teams to keep valuable institutional knowledge accessible.
          </p>
          <div class="relative h-[400px] rounded-lg overflow-hidden shadow-lg mb-8">
            <img
              src="/src/assets/images/workplace-search.jpg"
              alt="Workplace Search Interface"
              class="w-full h-full object-cover"
            />
          </div>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="#contact"
              class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary hover:bg-secondary rounded-lg transition duration-200"
            >
              Contact Us
            </a>
            <a
              href="#docs"
              class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-primary bg-white border-2 border-primary hover:bg-gray-50 rounded-lg transition duration-200"
            >
              Explore the Docs
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Security Features -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <h2 class="text-3xl font-bold text-center mb-12">
          Layer one: The Security First Vector Store
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {securityFeatures.map(feature => (
            <div class="rounded-lg p-6 shadow-lg">
              <div class="flex items-center mb-4">
                <Icon name={feature.icon} class="w-8 h-8 text-primary mr-3" />
                <h3 class="text-xl font-bold">
                  {feature.title}
                </h3>
              </div>
              <p>
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact CTA -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 text-center">
        <h2 class="text-3xl font-bold mb-8">Ready to get started?</h2>
        <div class="flex justify-center gap-4">
          <a
            href="#contact"
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary hover:bg-secondary rounded-lg transition duration-200"
          >
            Contact Us
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout> 