---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';


const metadata = {
  title: 'Pricing - NP Labs',
};

const enterpriseFeatures = [
  'Unlimited seats',
  'Custom data sources',
  'Single Tenant / On-Prem deployment options',
  'SAML/SCIM & Okta integration',
  'White-glove support',
  'RBAC - Admins, Developers, Premium Models, Standard Models',
  'Azure OpenAI support',
  'Bring-your-own LLM',
  'Automatic Acceptable Use Policies',
  'Unlimited data (including many more sources, such as Netsuite, Snowflake, Databricks, GCP, S3, and more)',
];

const communityFeatures = [
  { 
    title: 'Features',
    items: [
      'Connect to 25+ apps',
      'Choose Model provider',
      'AI Assistants',
      'Slack Bot',
      'Hybrid Search',
      'Developer APIs',
    ] 
  },
  { 
    title: 'Management & Security',
    items: [
      'Basic Auth',
      'Google OAuth',
    ] 
  },
  { 
    title: 'Support & Customization',
    items: [
      'Community Support',
    ] 
  }
];

const onyxCloudFeatures = [
  { 
    title: 'Features',
    items: [
      'Standard Answers',
      'Extended set of developer APIs',
      'Query history',
      'Admin Dashboard/Analytics',
    ] 
  },
  { 
    title: 'Management & Security',
    items: [
      'RBAC',
      'Permission Inheritance',
      'Encryption of Secrets',
      'Curator Role',
      'Configurable Usage Limits',
    ] 
  },
  { 
    title: 'Support & Customization',
    items: [
      'Priority Support',
      'Whitelabeling',
    ] 
  }
];
---

<Layout metadata={metadata}>
  <section class="relative bg-black text-white m-20 py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
          Pricing
        </h1>
        <p class="text-xl text-gray-400 mb-12">
          NP Labs creates plans for every type of company.
        </p>
      </div>

      <div class="flex flex-col lg:flex-row gap-8 mb-8">
        <!-- Community Plan -->
        <div class="lg:w-1/3 border border-white/10 rounded-lg overflow-hidden bg-black/30">
          <div class="p-8">
            <p class="text-sm uppercase text-gray-500 tracking-wider mb-2">Community</p>
            <h2 class="text-5xl font-bold mb-4">Free</h2>
            <p class="text-gray-400 mb-6">For small teams</p>
            
            <a href="#" class="block w-full bg-white text-black text-center px-6 py-3 rounded-lg font-semibold transition duration-200 hover:bg-white/90 mb-4">
              Get Started
            </a>
            
            <div class="inline-block bg-black/40 text-white text-sm px-4 py-1 rounded-full mb-8">
              Self host
            </div>
            
            {communityFeatures.map((section) => (
              <div class="mb-6">
                <h3 class="text-lg font-semibold mb-3">{section.title}</h3>
                <ul class="space-y-2">
                  {section.items.map((feature) => (
                    <li class="flex items-start">
                      <Icon name="tabler:check" class="flex-shrink-0 w-5 h-5 text-green-500 mt-0.5" />
                      <span class="ml-3 text-gray-300">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Onyx Cloud Plan -->
        <div class="lg:w-1/3 border border-white/10 rounded-lg overflow-hidden bg-black/30">
          <div class="p-8">
            <p class="text-sm uppercase text-gray-500 tracking-wider mb-2">Onyx Cloud</p>
            <h2 class="text-5xl font-bold mb-4">$16<span class="text-xl font-normal">/seat/mon</span></h2>
            <p class="text-gray-400 mb-6">For startups and scaleups</p>
            
            <a href="#" class="block w-full bg-white text-black text-center px-6 py-3 rounded-lg font-semibold transition duration-200 hover:bg-white/90 mb-4">
              Select Plan
            </a>
            
            <div class="inline-block bg-black/40 text-white text-sm px-4 py-1 rounded-full mb-8">
              Onyx Cloud
            </div>
            
            <p class="text-gray-300 mb-6">Everything in Community, plus:</p>
            
            {onyxCloudFeatures.map((section) => (
              <div class="mb-6">
                <h3 class="text-lg font-semibold mb-3">{section.title}</h3>
                <ul class="space-y-2">
                  {section.items.map((feature) => (
                    <li class="flex items-start">
                      <Icon name="tabler:check" class="flex-shrink-0 w-5 h-5 text-green-500 mt-0.5" />
                      <span class="ml-3 text-gray-300">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>

        <!-- Enterprise Plan -->
        <div class="lg:w-1/3 border border-white/10 rounded-lg overflow-hidden bg-black/30">
          <div class="p-8">
            <p class="text-sm uppercase text-gray-500 tracking-wider mb-2">Enterprise</p>
            <h2 class="text-5xl font-bold mb-4">Custom</h2>
            <p class="text-gray-400 mb-6">For large organizations</p>
            
            <a href="mailto:farrulla@np-labs.org" class="block w-full bg-white text-black text-center px-6 py-3 rounded-lg font-semibold transition duration-200 hover:bg-white/90 mb-10">
              Contact Sales
            </a>
            
            <ul class="space-y-3">
              {enterpriseFeatures.map((feature) => (
                <li class="flex items-start">
                  <Icon name="tabler:check" class="flex-shrink-0 w-5 h-5 text-green-500 mt-0.5" />
                  <span class="ml-3 text-gray-300">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  
</Layout>
