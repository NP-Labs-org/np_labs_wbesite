import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Sobre nós"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Democratizamos o acesso de IA<br />
      <span class="text-accent dark:text-white highlight"> para todos</span>
    </Fragment>

    <Fragment slot="subtitle">
      Implementar IA no seu sistema não é uma tarefa fácil. Para isso criamos uma plataforma que facilita a integração de 
      modelos de IA em qualquer aplicação. Todos devem ter uma fácil acesso a era da IA.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

