---
import Layout from '~/layouts/PageLayout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Page Not Found - NP Labs',
};
---

<Layout metadata={metadata}>
  <section class="relative bg-black text-white py-16 mt-20 md:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="flex mb-8">
        <div class="text-gray-500 text-2xl font-light">[</div>
        <div class="text-sm font-semibold tracking-wider ml-5 mr-16 pt-1 text-gray-500 uppercase">ERROR</div>
      </div>
      
      <div class="flex flex-col items-center">
        <h1 class="text-8xl md:text-9xl font-bold mb-6 leading-none">
          <span class="text-white tracking-tighter">404</span>
        </h1>
        
        <h2 class="text-2xl md:text-3xl font-bold mb-8 uppercase text-center">
          Page Not Found
        </h2>
        
        <div class="max-w-2xl text-center mb-12">
          <p class="text-gray-400 text-lg">
            The page you're looking for doesn't exist or has been moved.
            You can return to our homepage or explore other sections of our site.
          </p>
        </div>
        
        <div class="border-t border-white/10 pt-8 w-full max-w-md">
          <div class="flex justify-center">
            <a 
              href={getHomePermalink()} 
              class="inline-flex items-center justify-center px-6 py-3 text-sm font-medium text-black bg-white hover:bg-white/90 transition duration-200 uppercase tracking-wider border border-white/30"
            >
              Back to Homepage
            </a>
          </div>
        </div>
        
        <div class="absolute top-0 right-0 w-2 h-2 bg-gray-500 mt-20 mr-4"></div>
        <div class="absolute bottom-0 left-0 w-2 h-2 bg-gray-500 mb-20 ml-4"></div>
      </div>
    </div>
  </section>
</Layout>
